
{{> loggedin-header }}
{{#if authenticatedUser.isAdmin}}
    <h1>Admin Dashboard</h1>
    <button><a href="/dashboard/clients">View Clients</a></button>
{{else}}
    {{#unless authenticatedUser.projects}}
        <main class="initial-contact-form">
            <h3>Request your website</h3>
            <form class="request-form" action="/dashboard" method="post">
                <label for="title">Title</label>
                <input class="title" type="text" name="title" placeholder="Title">
                
                <label for="details">Details of idea</label>
                <textarea class="details" name="details" cols="15" rows="5" required="true"></textarea>
                
                <label for="colors">Color Scheme</label>
                <input name="colors" placeholder="Any colors in mind?" type="text">

                <label for="inspirations">Inspirational Designs</label>
                <input name="inspirations" placeholder="And inspirational designs, other websites?" type="text">

                <label for="comments">Additional Comments</label>
                <input name="comments" placeholder="Additional Comments/Questions" type="text">

                <label for="timeline">Timeline</label>
                <input type="text" name="timeline" placeholder="When would you like this done by?">

                <label for="budget">Budget</label>
                <input type="text" name="budget" placeholder="What's your budget?">

                <input type="hidden" name="clientId" value="{{ authenticatedUser._id }}"> 

                <button class="white-btn" type="submit">Submit</button>
            </form> 
        </main>  
        {{> basic-footer }} 
    {{else}}
        <main class="client-dashboard">
            <section class="profile-section">
                <i class="fas fa-user-circle"></i>
                <h1>{{authenticatedUser.fullName}}</h1>
                <h6>Account Info</h6>
                <p>{{authenticatedUser.phoneNumber}}</p>
                <p>{{authenticatedUser.email}}</p>
                <button>Update</button>
            </section>
            <section class="project-section">
                <h1>{{project.title}}</h1>
                {{#if project.paymentsDue}}
                    <h3>Please submit your payment of ${{project.paymentsDue}}</h3>
                    {{!-- <input type="hidden" id="chargeAmount" value={{project.paymentsDue}}> --}}
                    <script src="https://checkout.stripe.com/checkout.js"></script>
                    <form class="stripe-form" action="/dashboard/{{project._id}}/charge" method="POST">
                        <script
                            src="https://checkout.stripe.com/checkout.js"
                            class="stripe-button"
                            data-key="pk_test_W63C5PiHdw3FSQmvVIrgWo6c"	
                            data-amount="{{project.paymentsDue}}00"
                            data-name="Tech made"
                            data-description="Tech Made website charge"
                            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                            data-locale="auto">
                        </script>
                    </form>
                {{/if}}
                <div id="myProgress">
                    <div id="myBar"></div>
                </div>
                <div class="current-item">
                    <div class="project-tracker">
                        {{#if underReviewStill}}
                            <h3>Your project is currently under review, check back in soon.</h3>
                        {{else}}
                            <h4><strong> Latest Update: </strong>{{latestUpdate.title}}</h4>
                            <p><strong>Update Details: </strong>{{latestUpdate.details}}</p>
                        {{/if}}
                    </div>
                    {{#if underReviewStill}}
                    {{else}}
                    <div class="feedback-box">
                        <button id="currentFeedbackBtn" class="feedback-btn">Send Feedback</button>
                        <!-- The Modal -->
                        <div id="myModal" class="modal">
                            <!-- Modal content -->
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <div class="form-feedback">
                                    <form class="feedback-form" action="/dashboard/{{latestUpdate._id}}/feedback" method="post">
                                        <textarea name="feedback" id="" cols="30" rows="10"></textarea>
                                        <button type="submit">Submit</button>
                                    </form>
                                    <div class="current-feedback-view-box">
                                        <p class="latest-feedback-view"><strong><u>Your Feedback</u></strong></p>
                                        {{#each latestUpdate.feedback}}
                                            <p>{{this.feedback}}</p>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <script>
                            // Get the modal
                            var modal = document.getElementById('myModal');

                            // Get the button that opens the modal
                            var currentFeedbackBtn = document.getElementById("currentFeedbackBtn");

                            // Get the <span> element that closes the modal
                            var span = document.getElementsByClassName("close")[0];
                            console.log("span:", span);

                            // When the user clicks the button, open the modal 
                            currentFeedbackBtn.onclick = function() {
                                modal.style.display = "block";
                            }

                            // When the user clicks on <span> (x), close the modal
                            span.onclick = function() {
                                console.log("hit span")
                                modal.style.display = "none";
                            }

                            // When the user clicks anywhere outside of the modal, close it
                            window.onclick = function(event) {
                                if (event.target == modal) {
                                    modal.style.display = "none";
                                }
                            }
                        </script>
                    </div>
                </div>
                <h6>View Previous Updates</h6>
                <i class="fas fa-arrow-circle-down"></i>
                <section class="previous-updates">
                    {{#each project.updates}}
                        <div class="previous-feedback-box">
                            <h6>{{this.title}}</h6>
                            <p>{{this.details}}</p>
                            <button id="oldDeedbackBtn{{this._id}}">View/Send Feedback</button>
                            
                        <div id="oldFeedbackModal" class="modal">
                            <!-- Modal content -->
                            <div class="modal-content">
                                <span class="closeOldOne">&times;</span>
                                <div class="form-feedback">
                                    <form class="feedback-form" action="/dashboard/{{this._id}}/feedback" method="post">
                                        <textarea name="feedback" id="" cols="30" rows="10"></textarea>
                                        <button type="submit">Submit</button>
                                    </form>
                                    <div class="current-feedback-view-box">
                                        <p class="latest-feedback-view"><strong><u>Your Feedback</u></strong></p>
                                        {{#each this.feedback}}
                                            <p>{{this.feedback}}</p>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                            
                        <script>
                                // Get the modal
                                var oldFeedbackModal = document.getElementById('oldFeedbackModal');

                                // Get the button that opens the modal
                                var oldFeedbackBtn = document.getElementById("oldDeedbackBtn{{this._id}}");

                                // Get the <span> element that closes the modal
                                var spanOldOne = document.getElementsByClassName("closeOldOne")[0];

                                // When the user clicks the button, open the modal 
                                oldFeedbackBtn.onclick = function() {
                                    oldFeedbackModal.style.display = "block";
                                }

                                // When the user clicks on <span> (x), close the modal
                                spanOldOne.onclick = function() {
                                    oldFeedbackModal.style.display = "none";
                                }

                                // When the user clicks anywhere outside of the modal, close it
                                window.onclick = function(event) {
                                    if (event.target == oldFeedbackModal) {
                                        oldFeedbackModal.style.display = "none";
                                    }
                                }
                        </script>

                        </div>
                    {{/each}}
                </section>
                {{/if}}
                <style>
                    #myProgress {
                        width: 50%;
                        background-color: #ffffff;
                    }

                    #myBar {
                        width: {{project.projectPercentage}}%;
                        height: 30px;
                        background-color: green;
                    }
                </style>
            </section>
        </main>
        {{> basic-footer }}
    {{/unless}}
{{/if}}

{{> scripts }}