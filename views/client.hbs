<main class="admin-client-view">
    <h2>{{client.fullName}}</h2>
        {{!-- <section class="unresolved-feedbcak">

        </section> --}}
        <section class="new-update">
            <form action="/dashboard/clients/{{client._id}}" method="post">
                <label for="title">Update:</label>
                <input required type="text" name="title">
                <label for="details">Details:</label>        
                <input required type="text" name="details">
                <label for="title">Image:</label>     
                <input type="file" name="image" id="">   
                {{!-- <input type="image" src="" alt=""> --}}
                <label for="projectPercentage">Percent Completed</label>
                <input required type="number" name="projectPercentage">
                <label for="paymentsDue">Payments Due</label>
                <input name="paymentsDue" type="text">
                <button type="submit">Send Update</button>
            </form>
        </section>
        <section class="updates">
            <h5>Project Details</h5>
            <p>{{project.title}}</p>
            <p><strong>Payments Due: </strong>{{project.paymentsDue}}</p>
            <p><strong>Payments Completed: </strong>{{project.paymentsCompleted}}</p>
            {{#each project.updates}}            
                <h1>{{this.title}}</h1>
                <p>{{this.details}}</p>
                <p><strong>Client feedback:</strong></p>
                {{#each this.feedback}}
                    <p>{{this.feedback}}</p>
                {{/each}}
            {{/each}}
        </section>
</main>